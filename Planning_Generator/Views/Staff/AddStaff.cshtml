@{

}
@model StaffMemeber_M
<div class="text-center">
    <p class="display-4">Add a new staff member!</p>
</div>
<br />

@using (Html.BeginForm("AddStaff", "Staff", FormMethod.Post))
{
    <div class="p content">
        @Html.LabelFor(m => m.Name, new { @class = "form-floating mb-3" })
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name of the new staff member", required = "required" })

        @Html.LabelFor(m => m.Username, new { @class = "form-floating mb-3" })
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Username of the new staff member", required = "required" })

        @Html.LabelFor(m => m.Gender, "Select the gender")
        @Html.DropDownListFor(m => m.Gender, new SelectList(Enum.GetValues(typeof(Logic.Enum.Gender))), new { @class = "form-select form-select-sm mb-3", required = "required" })

        @Html.LabelFor(m => m.Occaption, "Select the occupation")
        @Html.DropDownListFor(m => m.Occaption, new SelectList(Enum.GetValues(typeof(Logic.Enum.Occupation))), new { @class = "form-select form-select-sm mb-3", required = "required" })

        @Html.LabelFor(m => m.Role, "Select the role")
        @Html.DropDownListFor(m => m.Role, new SelectList(Enum.GetValues(typeof(Logic.Enum.CompanyRole))), new { @class = "form-select form-select-sm mb-3", required = "required" })

        @Html.LabelFor(m => m.BirthDate, new { @class = "form-floating mb-3" })
        @Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control", placeholder = "Birth date of the new staff member", required = "required" })

        @Html.LabelFor(m => m.Degree_M.NameOfDegree, new { @class = "form-floating mb-3" })
        @Html.TextBoxFor(m => m.Degree_M.NameOfDegree, new { @class = "form-control", placeholder = "Name of the degree", required = "required" })

        @Html.LabelFor(m => m.Degree_M.DegreeLevel, new { @class = "form-floating mb-3" })
        @Html.TextBoxFor(m => m.Degree_M.DegreeLevel, new { @class = "form-control", placeholder = "Level of the degree", required = "required", type = "number", pattern = "[1-6]" })

    <br> <div class="mb-3">
            <input type="submit" name="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>
}

@if (ViewData["message"] != null)
{
   <div class="alert alert-@ViewData["MessageType"] role="alert">
        @ViewData["Message"]
   </div>
}
